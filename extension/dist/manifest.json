{
  "manifest_version": 3,
  "name": "PromptGuard",
  "version": "0.1",
  "icons": {
    "128": "images/icon.png"
  },
  "description": "Local prompt firewall â€” scans and blocks sensitive data before it reaches AI providers.",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["https://promptguard-p4.vercel.app/*"],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "PromptGuard"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
