{
  "manifest_version": 3,
  "name": "PromptGuard",
  "version": "1.0.0",
  "description": "Local prompt firewall â€” scans and blocks sensitive data before it reaches AI providers.",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "PromptGuard"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
